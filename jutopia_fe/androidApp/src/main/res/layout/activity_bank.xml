<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankActivity">

    <TextView
        android:id="@+id/bank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="은행입니다."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/bank_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="#B3A8A8"
        app:layout_constraintTop_toBottomOf="@+id/bank_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        tools:layout_editor_absoluteX="1dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/bank_view"
        tools:layout_editor_absoluteY="344dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/send"
                android:layout_width="92dp"
                android:layout_height="120dp"
                android:layout_marginRight="16dp"
                android:background="#F7F7F7">


                <ImageView
                    android:id="@+id/bank_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/send"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="송금하기"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/save"
                android:layout_width="92dp"
                android:layout_height="120dp"
                android:layout_marginRight="16dp"
                android:background="#F7F7F7">

                <ImageView
                    android:id="@+id/save_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/save"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적금상품"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="92dp"
                android:layout_height="120dp"
                android:background="#F7F7F7">

                <ImageView
                    android:id="@+id/deal_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/deal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래내역"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000" />
            </FrameLayout>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>